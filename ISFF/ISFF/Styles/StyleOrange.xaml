<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ISFF">
    
    <Style x:Key="fontNormalStyle" TargetType="ContentControl">
        <Setter Property="FontFamily" Value="Cambria"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="fontBigStyle" TargetType="ContentControl">
        <Setter Property="FontFamily" Value="Cambria"/>
        <Setter Property="FontSize" Value="22"/>
    </Style>
    <Style x:Key="fontHeadingStyle" TargetType="ContentControl">
        <Setter Property="FontFamily" Value="/Resources/#Audiowide"/>
        <Setter Property="Foreground" Value="#ffa834"/>
        <Setter Property="FontSize" Value="62"/>
    </Style>

    <SolidColorBrush x:Key="borderBrush" Color="#fec63d"/>
    <SolidColorBrush x:Key="backgroundWindow" Color="#fef67f"/>
    <SolidColorBrush x:Key="backgroundButtonNormal" Color="#f7fade"/>
    <SolidColorBrush x:Key="backgroundButtonMouseOver" Color="#FFF19E"/>
    <SolidColorBrush x:Key="backgroundTextblock" Color="#fefac0"/>

    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource backgroundWindow}"/>
        <Setter Property="BorderBrush" Value="{StaticResource borderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

</ResourceDictionary>