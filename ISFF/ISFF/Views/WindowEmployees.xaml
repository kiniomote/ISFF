<Window x:Class="ISFF.WindowEmployees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISFF"
        mc:Ignorable="d"
        Title="Сотрудники" Height="500" Width="500" MinHeight="500" MinWidth="500"
        Style="{StaticResource WindowStyle}" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource TextboxStyle}">
            <Setter Property="IsReadOnly" Value="{Binding IsReadOnly}"/>
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextblockStyle}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя часть-->
        <StackPanel Grid.Row="0">
            <ComboBox x:Name="comboboxSelectedEmployees" Style="{StaticResource ComboboxStyle}"
                      Width="350" Margin="0 10 0 10" Background="White" 
                      DataContext="{Binding KitParametrsEmployees}"
                      ItemsSource="{Binding Employees}" 
                      SelectedItem="{Binding SelectedEmployee}"
                      DisplayMemberPath="Fio"
                      IsEnabled="{Binding IsEnableCollection}" />
            <Button x:Name="buttonChangeEmployees" Style="{StaticResource SmallButtonStyle}"
                    Content="{Binding KitParametrsEmployees.EditEmployeeExtendedCommand.TextCommand}" Margin="170 0 170 0"
                    Command="{Binding KitParametrsEmployees.EditEmployeeExtendedCommand}" 
                    CommandParameter="{Binding KitParametrsEmployees}"/>
        </StackPanel>

        <!-- Центральная часть-->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" DataContext="{Binding KitParametrsEmployees}">
            <TextBlock Text="ФИО"/>
            <TextBox Width="400" Text="{Binding SelectedEmployee.Fio}"/>
            <TextBlock Text="Должность"/>
            <TextBox Width="400" Text="{Binding SelectedEmployee.Post}"/>
            <TextBlock Text="Ид. номер"/>
            <TextBox Width="250" Text="{Binding SelectedEmployee.IdNumber}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <TextBlock Text="Стаж"/>
                <TextBox Width="100" Text="{Binding SelectedEmployee.Exp}"/>
                <TextBlock Text="Зарплата"/>
                <TextBox Width="169" Text="{Binding SelectedEmployee.Salary}"/>
            </StackPanel>
        </StackPanel>

        <!-- Нижняя часть-->
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
            <Image Style="{StaticResource FigureStyle}" Margin="0 10 0 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="buttonAdd" Style="{StaticResource SmallButtonStyle}"
                        Content="{Binding KitParametrsEmployees.AddEmployeeExtendedCommand.TextCommand}" Margin="0 5 40 5"
                        Command="{Binding KitParametrsEmployees.AddEmployeeExtendedCommand}" 
                        CommandParameter="{Binding KitParametrsEmployees}"/>
                <Button x:Name="buttonDelete" Style="{StaticResource SmallButtonStyle}"
                        Content="Удалить" Margin="40 5 0 5"
                        Command="{Binding KitParametrsEmployees.RemoveEmployeeCommand}" 
                        CommandParameter="{Binding KitParametrsEmployees}"/>
            </StackPanel>
            <Button x:Name="buttonBackToMainWindow" Style="{StaticResource SmallButtonStyle}"
                    Content="Назад" Margin="170 2 170 5"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
