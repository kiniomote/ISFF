<Window x:Class="ISFF.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISFF"
        mc:Ignorable="d"
        Title="История" Height="500" Width="800"
        Style="{StaticResource WindowStyle}" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource VerySmallButtonStyle}">
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridIngredients" Style="{StaticResource DataGridStyle}"
                  ItemsSource="{Binding Records}"
                  SelectedItem="{Binding SelectedRecord}"
                  Height="400">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=String}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonOk" Content="ОК"
                Grid.Row="1"
                IsCancel="True"/>
    </Grid>
</Window>
